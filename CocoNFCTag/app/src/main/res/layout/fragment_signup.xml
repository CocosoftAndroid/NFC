<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_d3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp20"
            android:text="EASY SHOPPING CART"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/firstname_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:background="@drawable/ic_edit_txt_bg"
            android:hint="First Name"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="@dimen/dp10"
            android:padding="@dimen/dp10" />
        <EditText
            android:id="@+id/lastname_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:background="@drawable/ic_edit_txt_bg"
            android:hint="Last Name"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="@dimen/dp10"
            android:padding="@dimen/dp10" />

        <EditText
            android:id="@+id/username_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:background="@drawable/ic_edit_txt_bg"
            android:hint="User Name"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="@dimen/dp10"
            android:padding="@dimen/dp10" />

        <EditText
            android:id="@+id/pwd_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:inputType="textPassword"
            android:hint="Password"
            android:background="@drawable/ic_edit_txt_bg"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/dp10"
            android:padding="@dimen/dp10" />

        <EditText
            android:id="@+id/confirm_pwd_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/dp10"
            android:hint="Confirm Password"
            android:background="@drawable/ic_edit_txt_bg"
            android:padding="@dimen/dp10" />

        <EditText
            android:id="@+id/email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:inputType="textPassword"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="@dimen/dp10"
            android:background="@drawable/ic_edit_txt_bg"
            android:padding="@dimen/dp10" />

        <EditText
            android:id="@+id/phone_etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:hint="Phone Number"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/dp10"
            android:background="@drawable/ic_edit_txt_bg"
            android:padding="@dimen/dp10" />
        <TextView
            android:id="@+id/warning_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/dp10"
            android:text="Warning"
            android:visibility="invisible"
            android:textStyle="italic"
            android:textSize="@dimen/sp12"
            android:textColor="@color/red" />
        <TextView
            android:id="@+id/finish_signup_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_corner"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="@dimen/dp10"
            android:text="Sign Up"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>