<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_nfc_multi_reader"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"

android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.coco.coconfctag.NfcMultiReader">

    <Button
        android:text="Payment Mode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnPayment"
        android:background="@color/colorPrimaryDark"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="Total : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnPayment"
        android:layout_toEndOf="@+id/btnPayment"
        android:layout_marginLeft="30dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:typeface="sans"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/textView" />

    <ListView
        android:id="@+id/listView"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btnPayment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
